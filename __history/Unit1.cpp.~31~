//---------------------------------------------------------------------------
__fastcall TForm1::TForm1(TComponent* Owner)
	: TForm(Owner)
{
StringGrid1->Cells[0][0] = "Наименование автомобиля";
StringGrid1->Cells[1][0] = "Марка автомобиля";
StringGrid1->Cells[2][0] = "Число мест";
StringGrid1->Cells[3][0] = "Расход бензина";
}
//---------------------------------------------------------------------------

void __fastcall TForm1::Open3Click(TObject *Sender)
{
	OpenDialog1->Execute();

	AnsiString vrem;
	vrem = OpenDialog1->FileName;

	std::strcpy(filename, vrem.c_str());


}
//---------------------------------------------------------------------------

void __fastcall TForm1::Add1Click(TObject *Sender)
{
	Close();
}
//---------------------------------------------------------------------------


void __fastcall TForm1::About1Click(TObject *Sender)
{
	AboutForm->ShowModal();
}
//---------------------------------------------------------------------------

void __fastcall TForm1::New1Click(TObject *Sender)
{
	NewDialog->Execute();
    AnsiString filename =  OpenDialog1->FileName;
	char * c_filename = filename.c_str();


	FILE * f = fopen(c_filename, "wb+");
	int x = 10;
	fwrite(&x, sizeof(int), 1, f);
	fclose(f);
}
