void __fastcall TFileCreation::Button1Click(TObject *Sender)
{
	AnsiString new_filename = Edit1->Text;
	char c_filename[150];

	new_filename = "D:\\Programming\\Projects\\Programming Technologies\\Lab1\tables\\" + new_filename;

	strcpy(c_filename, new_filename.c_str());
	AddFile(c_filename);
	Close();
}
