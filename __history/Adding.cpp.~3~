//---------------------------------------------------------------------------
void __fastcall TForm4::Button1Click(TObject *Sender)
{
	AnsiString name, brand, seats, mileage;
	name = Edit1->Text;
	brand = Edit2->Text;
	seats = Edit3->Text;
	mileage = Edit4->Text;

	Record temp_rec;
	temp_rec.car_name =  name.c_str()

	AddRecord()

}
